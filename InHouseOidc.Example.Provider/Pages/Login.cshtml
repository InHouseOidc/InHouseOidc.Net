@page
@using InHouseOidc.Example.Provider
@namespace InHouseOidc.Example.Provider.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Login
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
<div class="container640">
    <div class="card">
        <div class="card-header">
            <h3>InHouseOidc.Example.Provider<span class="float-end">Login</span></h3>
        </div>
        <div class="card-body">
        <form method="post" asp-route="Login">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Subject"></label>
                <input class="form-control" placeholder="Subject" asp-for="Subject" autofocus>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" placeholder="Email" asp-for="Email">
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" placeholder="Name" asp-for="Name">
            </div>
            <div class="form-group">
                <label asp-for="Roles"></label>
                <input class="form-control" placeholder="Roles" asp-for="Roles">
            </div>
            <div class="form-group">
                <label asp-for="Website"></label>
                <input class="form-control" placeholder="Website" asp-for="Website">
            </div>
            <button class="btn btn-primary float-end mt-2" name="button" value="login">Login</button>
        </form>
        </div>
    </div>
</div>
