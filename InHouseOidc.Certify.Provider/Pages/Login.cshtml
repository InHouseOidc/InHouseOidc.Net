@page
@using InHouseOidc.Certify.Provider
@namespace InHouseOidc.Certify.Provider.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Login
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
<div class="container640">
    <div class="card">
        <div class="card-header">
            <h3>InHouseOidc.Certify.Provider<span class="float-end">Login</span></h3>
        </div>
        <div class="card-body">
        <form method="post" asp-route="Login">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Subject"></label>
                <input class="form-control" placeholder="Subject" asp-for="Subject" autofocus>
            </div>
            <button class="btn btn-primary float-end mt-2" name="button" value="login">Login</button>
        </form>
        </div>
    </div>
</div>
